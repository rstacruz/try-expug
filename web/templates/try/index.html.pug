.expug-nav
  .container-fluid
    a.brand(href=try_path(@conn, :index))
      | Expug
    a(href="https://github.com/rstacruz/expug")
      | Expug
    a(href="https://github.com/rstacruz/phoenix_expug")
      | PhoenixExpug

.try-expug
  .field.-in
    h3.field-heading Input
    textarea.input-box.-in(role="input" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false")
      = @code
  .field.-out
    h3.field-heading Output
    .error-box(role="error")
    textarea.input-box.-out(role="output" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false")
  .info
    .info-box
      h1 Expug
      p Expug is an HTML templating engine for Elixir/Phoenix.
      h4 Links
      .list-group
        a.list-group-item(href="https://github.com/rstacruz/expug")
          | Expug
        a.list-group-item(href="https://github.com/rstacruz/phoenix_expug")
          | PhoenixExpug
